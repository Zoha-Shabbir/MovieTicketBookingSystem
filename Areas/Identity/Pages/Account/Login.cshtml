@page
@model LoginModel
@{
    ViewData["Title"] = "Movie Haven - Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/authentication.css">
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        
        body {
            background-color: #0f0f0f;
            color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: #1a1a1a !important;
            border-bottom: 2px solid #e50914;
            padding: 15px 0;
        }

        .navbar-brand .logo {
            color: #e50914;
            font-weight: bold;
            font-size: 1.8rem;
        }

            .navbar-brand .logo span {
                color: #ffffff;
            }

        .nav-link {
            color: #ffffff !important;
            font-weight: 500;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #e50914 !important;
            }

        .login-container {
            max-width: 500px;
            margin: 0 auto;
            background-color: #1a1a1a;
            border-radius: 15px;
            padding: 45px;
            border-left: 5px solid #e50914;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header h3 {
                color: white;
                font-weight: bold;
                font-size: 1.8rem;
                margin-bottom: 10px;
            }

        .form-label {
            color: #ffffff;
            font-weight: bold;
            font-size: 16px;
            margin-bottom: 8px;
        }

        .form-control {
            background-color: #0f0f0f;
            border: 2px solid #333;
            color: #ffffff;
            padding: 12px 15px;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                background-color: #0f0f0f;
                border-color: #e50914;
                color: #ffffff;
                box-shadow: 0 0 0 0.2rem rgba(229, 9, 20, 0.25);
            }

            .form-control::placeholder {
                color: #666;
            }

        .form-check-input {
            background-color: #0f0f0f;
            border: 2px solid #333;
        }

            .form-check-input:checked {
                background-color: #e50914;
                border-color: #e50914;
            }

        .form-check-label {
            color: #ffffff;
            font-size: 14px;
        }

        .btn-login {
            background-color: #e50914;
            border: none;
            color: white;
            padding: 15px;
            font-weight: bold;
            border-radius: 8px;
            width: 100%;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

            .btn-login:hover {
                background-color: #b8070f;
                transform: translateY(-2px);
            }

        .login-footer {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #333;
        }

            .login-footer p {
                margin-bottom: 10px;
                color: #b0b0b0;
            }

            .login-footer a {
                color: #e50914;
                text-decoration: none;
                font-weight: 500;
                transition: color 0.3s;
            }

                .login-footer a:hover {
                    color: #b8070f;
                    text-decoration: underline;
                }

        .text-danger {
            color: #e50914 !important;
            font-size: 14px;
            margin-top: 5px;
        }

            .login-container

        {
            margin: 20px;
            padding: 30px 20px;
        }

        .navbar-brand .logo {
            font-size: 1.5rem;
        }

        .col-md-5 d-none d-md-block
        {
            display:flex;
            margin-top:30px;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <span class="logo">MOVIE<span>HAVEN</span></span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home me-1"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Register"><i class="fas fa-user-plus me-1"></i> Sign Up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="row justify-content-center align-items-center">

        <div class="col-md-5 d-none d-md-block">
            <img src="~/images/popcorn.jpg" class="img-fluid rounded h-75 w-auto  alt="Register Banner" />
        </div>
        <div class="login-container">
            <div class="login-header">
                <h3>Sign In to Movie Haven</h3>
            </div>

            <div class="login-form">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email address</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Enter your email">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Enter your password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input">
                        <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                    </div>

                    <button type="submit" class="btn btn-login btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i> Sign In
                    </button>
                </form>
            </div>

            <div class="login-footer">
                <p>New to Movie Haven? <a href="/Identity/Account/Register">Create an account</a></p>
                <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>