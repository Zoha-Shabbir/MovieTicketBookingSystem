<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Movie Haven - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
       
        body {
            background-color: #0f0f0f;
            color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .navbar {
            background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
            border-bottom: 3px solid #e50914;
            padding: 15px 0;
        }

        .logo {
            color: white;
            font-size: 28px;
            font-weight: bolder;
            text-decoration: none;
        }

            .logo span {
                color: #e50914;
            }

        .nav-link {
            color: white;
            font-weight: 500;
            padding: 10px 20px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            color: lightgray !important;
            background-color: #e50914;
            
        }

        .nav-link.btn {
            border: none;
            background: none;
        }

    
        .main-content {
            min-height: calc(100vh - 160px);
            background-color: #0f0f0f;
        }

        
        footer {
            background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
            border-top: 2px solid #333;
            padding: 30px 0;
            margin-top: 50px;
        }

            footer .logo {
                font-size: 24px;
            }

            footer p {
                color: #b0b0b0;
                margin: 0;
            }

        
        .form-container {
            background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
            border-radius: 10px;
            padding: 30px;
            border-left: 4px solid #e50914;
            box-shadow: 0 5px 20px rgba(229, 9, 20, 0.2);
        }

        .form-label {
            color: #ffffff;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .form-control {
            background-color: #1a1a1a;
            border: 2px solid #333;
            color: #ffffff;
            padding: 12px;
            border-radius: 5px;
        }

        .form-control:focus {
           background-color: #1a1a1a;
           border-color: #e50914;
           color: #ffffff;
           box-shadow: 0 0 0 0.2rem rgba(229, 9, 20, 0.25);
        }
        .btn-warning {
            background: linear-gradient(135deg, #e50914 0%, #b8070f 100%);
            border: none;
            color: white;
            padding: 12px 30px;
            font-weight: bold;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .btn-warning:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(229, 9, 20, 0.4);
            }

        .btn-secondary {
            background: linear-gradient(135deg, #6c757d 0%, #5a6268 100%);
            border: none;
            color: white;
            padding: 12px 30px;
            font-weight: bold;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .btn-secondary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(108, 117, 125, 0.4);
            }

        .btn-outline-light {
            border: 2px solid #6c757d;
            color: #6c757d;
            padding: 10px 25px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .btn-outline-light:hover {
                background-color: #6c757d;
                color: white;
                transform: translateY(-2px);
            }

        .page-title {
            color: #e50914;
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            text-shadow: 0 2px 10px rgba(229, 9, 20, 0.3);
        }

        @@media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }

            .form-container {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/Admin">
                <span class="logo">MOVIE<span>HAVEN</span></span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin">
                            <i class="fas fa-cog me-1"></i> Admin Panel
                        </a>
                    </li>
                    <li class="nav-item">
                        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Booking", new { area = "" })">
                            <button type="submit" class="nav-link btn btn-link">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer>
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-12">
                    <span class="logo">MOVIE<span>HAVEN</span></span>
                    <p class="mt-3 mb-0 small">© @DateTime.Now.Year Movie Haven. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>