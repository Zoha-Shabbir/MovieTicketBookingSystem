@model List<MovieBooking.Models.Booking>
@{
    ViewData["Title"] = "My Bookings - Movie Haven";
    Layout = "_Layout";
}

<style>
    .bookings-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 25px;
        margin-top: 20px;
    }

    .booking-card {
        background-color: #1a1a1a;
        border-radius: 15px;
        padding: 25px;
        border-left: 5px solid #e50914;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
    }

        .booking-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
        }

    .booking-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid #333;
    }

    .movie-title {
        color: white;
        font-size: 1.8rem;
        font-weight: bold;
        margin: 0;
    }

    .status-badge {
        padding: 6px 15px;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-confirmed {
        background-color: green;
        color: white;
        border: 1px solid green;
    }

    .status-pending {
        background-color: rgba(255, 193, 7, 0.2);
        color: #ffc107;
        border: 1px solid #ffc107;
    }

    .booking-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
    }

    .detail-label {
        font-size: 0.85rem;
        color: #b0b0b0;
        margin-bottom: 5px;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .detail-label i {
            color: #e50914;
        }

    .detail-value {
        font-size: 1.1rem;
        color: #ffffff;
        font-weight: 600;
    }

    .price {
        color: #e50914;
        font-weight: 700;
    }

    

    .actions {
        display: flex;
        gap: 15px;
    }

    .btn {
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary {
        background-color: #e50914;
        color: white;
    }

        .btn-primary:hover {
            background-color: #b8070f;
            transform: translateY(-2px);
        }

    .btn-outline-danger {
        background-color: transparent;
        border: 2px solid #e50914;
        color: white;
    }

        .btn-outline-danger:hover {
            background-color: #e50914;
            color: white;
            transform: translateY(-2px);
        }

    .btn-outline-light {
        border: 2px solid white;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 20px;
    }

        .btn-outline-light:hover {
            background-color: #6c757d;
            color: white;
            transform: translateY(-2px);
            text-decoration: none;
        }

    .page-title {
        color: white;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #333;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .booking-details {
            grid-template-columns: 1fr;
        }

        .actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .page-title {
            font-size: 2rem;
        }

        .booking-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }
    }
</style>
<body>
  

    <div class="container py-5">
        <div class="booking-list">
            <h1 class="mb-4"><i class="fas fa-ticket-alt me-2"></i>My Bookings</h1>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="bookings">
                @if (Model != null && Model.Count>0)
                {
                    @foreach (var booking in Model)
                    {
                        <div class="booking-item" data-booking-id="@booking.BookingId">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h3>
                                        @booking.Movie.Title
                                        <span class="badge @(booking.Status == "Confirmed" ? "bg-success" : "bg-secondary") ms-2">
                                            @booking.Status
                                        </span>
                                    </h3>
                                    <p><strong>Show Date:</strong> @booking.ShowDate.ToString("MMMM dd, yyyy")</p>
                                    <p><strong>Tickets:</strong> @booking.TicketsCount</p>
                                    <p><strong>Total Price:</strong> $@booking.TotalPrice</p>
                                   
                                </div>
                                @if (booking.Status == "Confirmed")
                                {
                                    <form method="post" action="@Url.Action("Cancel", "Booking", new { id = booking.BookingId })"
                                          onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                        <button type="submit" class="btn-cancel">
                                            <i class="fas fa-times-circle me-1"></i>Cancel
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        You don't have any bookings yet.
                        <a href="@Url.Action("Index", "Booking")" class="alert-link">Book a movie now!</a>
                    </div>
                }
            </div>
            <a href="@Url.Action("Index", "Booking")" class="btn btn-outline-danger btn-lg w-100 py-3">
                <i class="fas fa-check-circle me-2"></i> Back to Home
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
