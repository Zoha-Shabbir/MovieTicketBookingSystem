@model MovieBooking.Models.Movie
@{
    ViewData["Title"] = "Add Movie";
    Layout = "_AdminLayout";
}

<style>
    .page-title {
        color: #e50914;
        font-size: 2.2rem;
        font-weight: bold;
        margin: 0;
    }

    .form-container {
        background-color: #1a1a1a;
        border-radius: 10px;
        padding: 30px;
        border-left: 4px solid #e50914;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .form-label {
        color: #ffffff;
        font-weight: bold;
        margin-bottom: 8px;
        font-size: 16px;
    }

    .form-control {
        background-color: #0f0f0f;
        border: 2px solid #333;
        color: #ffffff;
        padding: 12px;
        border-radius: 5px;
        font-size: 16px;
    }

        .form-control:focus {
            background-color: #0f0f0f;
            border-color: #e50914;
            color: #ffffff;
            box-shadow: 0 0 0 0.2rem rgba(229, 9, 20, 0.25);
        }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: white;
        padding: 12px 30px;
        font-weight: bold;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
        padding: 12px 30px;
        font-weight: bold;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }

    .btn-outline-light {
        border: 2px solid white;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-outline-light:hover {
            background-color: #6c757d;
            color: white;
            transform: translateY(-2px);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-title {
            font-size: 1.8rem;
        }

        .form-container {
            padding: 20px;
        }

        .btn-success,
        .btn-secondary {
            padding: 10px 20px;
        }
    }
</style>

<div class="container mt-4">
    <h3 class="text-danger mb-4"><i class="fas fa-plus-circle"></i> Add New Movie </h3>
   

    <form method="post" asp-action="AddMovie">
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control bg-dark text-light" required />
        </div>

        <div class="mb-3">
            <label asp-for="Genre" class="form-label"></label>
            <input asp-for="Genre" class="form-control bg-dark text-light" required />
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control bg-dark text-light" required />
        </div>

        <div class="mb-3">
            <label asp-for="PosterUrl" class="form-label"></label>
            <input asp-for="PosterUrl" class="form-control bg-dark text-light" placeholder="/image-name.png" required />
        </div>

        <div class="mb-3">
            <label asp-for="TicketsAvailable" class="form-label"></label>
            <input asp-for="TicketsAvailable" type="number" class="form-control bg-dark text-light" required />
        </div>

        <button type="submit" class="btn btn-success">Add Movie</button>
        <a href="/Admin" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
    </form>
</div>
