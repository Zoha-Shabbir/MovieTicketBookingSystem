@model List<MovieBooking.Models.Booking>
@{
    ViewData["Title"] = "All Bookings";
    Layout = "_AdminLayout";
}

<style>
    .page-title {
        color: #e50914;
        font-size: 2.2rem;
        font-weight: bold;
        margin: 0;
        text-align: center;
    }

    .bookings-container {
        background-color: #1a1a1a;
        border-radius: 10px;
        padding: 30px;
        border-left: 4px solid #e50914;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        color: white;
        margin-bottom: 20px;
    }

        .table th {
            background-color: #0f0f0f;
            color: white;
            padding: 15px;
            text-align: left;
            border-bottom: 2px solid #e50914;
            font-weight: bold;
            font-size: 16px;
        }

        .table td {
            background-color: #1a1a1a;
            padding: 15px;
            border-bottom: 1px solid #333;
            color: white;
        }

        .table tr:hover {
            background-color: #2a2a2a;
        }

    .btn-outline-light {
        border: 2px solid white;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-outline-light:hover {
            background-color: #6c757d;
            color: white;
            transform: translateY(-2px);
            text-decoration: none;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-title {
            font-size: 1.8rem;
        }

        .bookings-container {
            padding: 20px;
            overflow-x: auto;
        }

        .table {
            font-size: 14px;
        }

            .table th,
            .table td {
                padding: 10px 8px;
            }
    }
</style>

<div class="container mt-4">
    <h3 class="text-danger mb-4"><i class="fas fa-ticket-alt"></i> All Bookings</h3>

    <div class="table-responsive">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Person Name</th>
                    <th>Movie</th>
                    <th>Show Date</th>
                    <th>Tickets</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.User.FirstName @booking.User.LastName</td>
                        <td>@booking.Movie.Title</td>
                        <td>@booking.ShowDate.ToString("dd MMM yyyy HH:mm")</td>
                        <td>@booking.TicketsCount</td>
                        <td>
                            <span class="badge @(booking.Status == "Confirmed" ? "bg-success" : "bg-secondary")">
                                @booking.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a href="/Admin" class="btn btn-secondary mt-3">
        <i class="fas fa-arrow-left"></i> Back to Admin Panel
    </a>
</div>
