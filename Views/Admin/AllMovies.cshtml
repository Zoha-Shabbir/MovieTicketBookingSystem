@model List<MovieBooking.Models.Movie>
@{
    ViewData["Title"] = "All Movies";
    Layout = "_AdminLayout";
}

<style>
    .page-title {
        color: #e50914;
        font-size: 2.2rem;
        font-weight: bold;
        margin: 0;
        text-align: center;
    }

    .movies-container {
        background-color: #1a1a1a;
        border-radius: 10px;
        padding: 30px;
        border-left: 4px solid #e50914;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        color: white;
        margin-bottom: 20px;
    }

        .table th {
            background-color: #0f0f0f;
            color: white;
            padding: 15px;
            text-align: left;
            border-bottom: 2px solid #e50914;
            font-weight: bold;
            font-size: 16px;
        }

        .table td {
            background-color: #1a1a1a;
            padding: 15px;
            border-bottom: 1px solid #333;
            color: white;
        }

        .table tr:hover {
            background-color: #2a2a2a;
        }

    .btn-edit {
        background-color: dodgerblue;
        border: none;
        color: white;
        padding: 8px 15px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-edit:hover {
            background-color: #b8070f;
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

    .btn-delete {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 8px 15px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background-color: #c82333;
            transform: translateY(-2px);
        }

    .btn-outline-light {
        border: 2px solid white;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-outline-light:hover {
            background-color: #6c757d;
            color: white;
            transform: translateY(-2px);
            text-decoration: none;
        }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-title {
            font-size: 1.8rem;
        }

        .movies-container {
            padding: 20px;
            overflow-x: auto;
        }

        .table {
            font-size: 14px;
        }

            .table th,
            .table td {
                padding: 10px 8px;
            }

        .action-buttons {
            flex-direction: column;
            gap: 5px;
        }

        .btn-edit,
        .btn-delete {
            padding: 6px 10px;
            font-size: 12px;
        }
    }
</style>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <h3 class="text-danger mb-4"><i class="fas fa-film"></i> All Movies</h3>

    <div class="table-responsive">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Price</th>
                    <th>Tickets</th>
                    <th>Actions</th> <!-- New column for buttons -->
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.MovieId</td>
                        <td>@movie.Title</td>
                        <td>@movie.Genre</td>
                        <td>$@movie.Price</td>
                        <td>@movie.TicketsAvailable</td>
                        <td>
                            <a asp-controller="Admin" asp-action="EditMovie" asp-route-id="@movie.MovieId" class="btn btn-sm btn-primary me-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-controller="Admin" asp-action="DeleteMovie" asp-route-id="@movie.MovieId" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a href="/Admin" class="btn btn-secondary mt-3">
        <i class="fas fa-arrow-left"></i> Back to Admin Panel
    </a>
</div>
